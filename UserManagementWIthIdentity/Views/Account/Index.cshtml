@model IEnumerable<UsersVM>

@{
    ViewData["Title"] = "Users";
    var index = 1;
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">@ViewData["Title"]</h1>
</div>

<a asp-action="Create" class="btn btn-primary">Add New</a>


<table class="table table-striped mt-4">
    <thead>
        <tr class="bg-primary text-white">
            <th>#</th>
            <th>Name</th>
            <th>Email</th>
            <th>Roles</th>
            <th>Actions</th>
            <!-- Add more columns as needed -->
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@index</td>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>@string.Join(" , ", user.NameRoles.ToList())</td>
                <td>
                    <a class="btn btn-primary" asp-controller="Account" asp-action="Update" asp-route-userId="@user.Id">Update</a>
                </td>
            </tr>
            index++;
        }
    </tbody>
</table>
